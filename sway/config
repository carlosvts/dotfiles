# --- Configurações Gerais ---
# Tecla Super (Windows)
set $mod Mod4

# Fonte do sistema
font pango:JetBrainsMono Nerd Font 10

# --- Input/Output ---
input * {
    xkb_layout "us"
    xkb_variant "intl"
}

# disables mouse acceleration
input "type:mouse" {
	accel_profile "flat"
	pointer_accel 0
}

# Wallpaper (ajuste o caminho se necessário)
output * bg $HOME/dotfiles/sway/wallpapers/bg.jpg fill

# --- Atalhos Básicos ---
bindsym $mod+Return exec kitty
bindsym $mod+Shift+q kill
bindsym $mod+d exec wofi --show drun
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'Sair?' -b 'Sim' 'swaymsg exit'
# windows alt w 
bindsym $mod+Mod1+w exec ~/dotfiles/sway/select_wallpaper.sh 
bindsym $mod+e exec thunar
bindsym $mod+Shift+s exec grim -g "$(slurp)" - | swappy -f -

# Workspaces (Mudar de workspace)
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
# ... adicione até o 9 se quiser

# Teclas de movimento estilo Vim
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Teclas de movimento com setas
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Mover a janela focada
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right


# Apagar tela do notebook e adiciona botao de desligar
bindsym $mod+F11 output eDP-1 disable
bindsym $mod+F12 output eDP-1 enable
bindsym $mod+0 exec nwg-bar

# Config monitor
output HDMI-A-1 pos 0 0 res 1920x1080@144Hz
output eDP-1 pos 1920 0 res 1920x1080@144Hz

workspace 1 output HDMI-A-1
workspace 2 output HDMI-A-1
workspace 3 output HDMI-A-1
workspace 4 output HDMI-A-1
workspace 5 output HDMI-A-1
workspace 6 output eDP-1


# Classes fixas dos workspaces
assign [app_id="vesktop"] workspace number 4
exec flatpak run dev.vencord.Vesktop

# --- Inicialização ---
# Iniciar a Waybar (sempre fora de blocos e sem vírgulas)
exec waybar
exec_always nwg-dock -d -p bottom -a center -i 48 -mb 10
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

